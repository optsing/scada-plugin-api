{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "./lib",
    "declaration": true,
    "emitDeclarationOnly": true
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "lib",
    "node_modules"
  ]
}
